digraph MatmulComputeGraphPETiling {
    rankdir=LR;
    bgcolor="white";
    pad=0.5;
    dpi=300;

    // Graph styling
    node [fontname="Arial", fontsize=11, style="filled,rounded", shape=box];
    edge [fontname="Arial", fontsize=9];

    // Title
    label="PE Column Tiling Transform: Before and After\n2Ã— Column Tiling combines Subgraphs 1 & 2 on different PE tiles";
    labelloc="t";
    fontsize=14;
    fontname="Arial Bold";

    // ==================== BEFORE ====================
    subgraph cluster_before {
        label="BEFORE: Sequential Execution";
        style="dashed";
        color="#888888";
        fontsize=12;

        // Subgraph 1: Output[0,1]
        subgraph cluster_before_1 {
            label="Subgraph 1\n(M_tile=0, N_tile=1)";

            before_alloc_L_1 [label="L_sbuf_1 =\nndarray(...)", fillcolor="#E8E8E8"];
            before_alloc_R_1 [label="R_sbuf_1 =\nndarray(...)", fillcolor="#E8E8E8"];
            before_alloc_out_1 [label="out_sbuf_1 =\nndarray(...)", fillcolor="#E8E8E8"];
            before_load_L_1 [label="load(L[0, :],\ndst=L_sbuf_1)", fillcolor="#FFEAA7"];
            before_load_R_1 [label="load(R[:, 1],\ndst=R_sbuf_1)", fillcolor="#FFEAA7"];
            before_compute_1 [label="matmul(L_sbuf_1,\nR_sbuf_1, out_sbuf_1)", fillcolor="#A8D8EA"];
            before_store_1 [label="store(out_sbuf_1,\ndst=Output[0,1])", fillcolor="#A8E6CF"];

            before_alloc_L_1 -> before_load_L_1 [label="L_sbuf_1", color="#666666"];
            before_alloc_R_1 -> before_load_R_1 [label="R_sbuf_1", color="#666666"];
            before_alloc_out_1 -> before_compute_1 [label="out_sbuf_1", color="#666666"];
            before_load_L_1 -> before_compute_1 [label="L_sbuf_1", color="#666666"];
            before_load_R_1 -> before_compute_1 [label="R_sbuf_1", color="#666666"];
            before_compute_1 -> before_store_1 [label="out_sbuf_1", color="#666666"];
        }

        // Subgraph 2: Output[1,0]
        subgraph cluster_before_2 {
            label="Subgraph 2\n(M_tile=1, N_tile=0)";

            before_alloc_L_2 [label="L_sbuf_2 =\nndarray(...)", fillcolor="#E8E8E8"];
            before_alloc_R_2 [label="R_sbuf_2 =\nndarray(...)", fillcolor="#E8E8E8"];
            before_alloc_out_2 [label="out_sbuf_2 =\nndarray(...)", fillcolor="#E8E8E8"];
            before_load_L_2 [label="load(L[1, :],\ndst=L_sbuf_2)", fillcolor="#FFEAA7"];
            before_load_R_2 [label="load(R[:, 0],\ndst=R_sbuf_2)", fillcolor="#FFEAA7"];
            before_compute_2 [label="matmul(L_sbuf_2,\nR_sbuf_2, out_sbuf_2)", fillcolor="#A8D8EA"];
            before_store_2 [label="store(out_sbuf_2,\ndst=Output[1,0])", fillcolor="#A8E6CF"];

            before_alloc_L_2 -> before_load_L_2 [label="L_sbuf_2", color="#666666"];
            before_alloc_R_2 -> before_load_R_2 [label="R_sbuf_2", color="#666666"];
            before_alloc_out_2 -> before_compute_2 [label="out_sbuf_2", color="#666666"];
            before_load_L_2 -> before_compute_2 [label="L_sbuf_2", color="#666666"];
            before_load_R_2 -> before_compute_2 [label="R_sbuf_2", color="#666666"];
            before_compute_2 -> before_store_2 [label="out_sbuf_2", color="#666666"];
        }
    }

    // ==================== AFTER ====================
    subgraph cluster_after {
        label="AFTER: Parallel PE Column Tiling";
        style="dashed";
        color="#888888";
        fontsize=12;

        // PE-tiled merged subgraph combining sg1 and sg2
        subgraph cluster_merged_12 {
            label="PE Column-Tiled Subgraph (combines sg1 & sg2)";
            penwidth=2;
            color="#4169E1";

            // Allocate nodes for sg1 and sg2
            alloc_L_1 [label="L_sbuf_1 =\nndarray(...)", fillcolor="#E8E8E8"];
            alloc_R_1 [label="R_sbuf_1 =\nndarray(...)", fillcolor="#E8E8E8"];
            alloc_out_1 [label="out_sbuf_1 =\nndarray(...)", fillcolor="#E8E8E8"];
            alloc_L_2 [label="L_sbuf_2 =\nndarray(...)", fillcolor="#E8E8E8"];
            alloc_R_2 [label="R_sbuf_2 =\nndarray(...)", fillcolor="#E8E8E8"];
            alloc_out_2 [label="out_sbuf_2 =\nndarray(...)", fillcolor="#E8E8E8"];

            // sg1 operations on Column Tile 0
            load_L_1 [label="load(L[0, :],\ndst=L_sbuf_1)", fillcolor="#FFEAA7"];
            load_R_1 [label="load(R[:, 1],\ndst=R_sbuf_1)", fillcolor="#FFEAA7"];
            compute_1 [label="matmul(L_sbuf_1,\nR_sbuf_1, out_sbuf_1)\ntile_pos=(0,0)\ntile_size=(128,32)\n[PE Column Tile 0]", fillcolor="#A8D8EA", penwidth=2];
            store_1 [label="store(out_sbuf_1,\ndst=Output[0,1])", fillcolor="#A8E6CF"];

            // sg2 operations on Column Tile 1
            load_L_2 [label="load(L[1, :],\ndst=L_sbuf_2)", fillcolor="#FFEAA7"];
            load_R_2 [label="load(R[:, 0],\ndst=R_sbuf_2)", fillcolor="#FFEAA7"];
            compute_2 [label="matmul(L_sbuf_2,\nR_sbuf_2, out_sbuf_2)\ntile_pos=(0,64)\ntile_size=(128,32)\n[PE Column Tile 1]", fillcolor="#A8D8EA", penwidth=2];
            store_2 [label="store(out_sbuf_2,\ndst=Output[1,0])", fillcolor="#A8E6CF"];

            alloc_L_1 -> load_L_1 [label="L_sbuf_1", color="#666666"];
            alloc_R_1 -> load_R_1 [label="R_sbuf_1", color="#666666"];
            alloc_out_1 -> compute_1 [label="out_sbuf_1", color="#666666"];
            alloc_L_2 -> load_L_2 [label="L_sbuf_2", color="#666666"];
            alloc_R_2 -> load_R_2 [label="R_sbuf_2", color="#666666"];
            alloc_out_2 -> compute_2 [label="out_sbuf_2", color="#666666"];

            load_L_1 -> compute_1 [label="L_sbuf_1", color="#666666"];
            load_R_1 -> compute_1 [label="R_sbuf_1", color="#666666"];
            compute_1 -> store_1 [label="out_sbuf_1", color="#666666"];

            load_L_2 -> compute_2 [label="L_sbuf_2", color="#666666"];
            load_R_2 -> compute_2 [label="R_sbuf_2", color="#666666"];
            compute_2 -> store_2 [label="out_sbuf_2", color="#666666"];
        }
    }

    // Layout hint
    before_store_1 -> alloc_L_1 [style="invis", weight=0];
    before_store_2 -> alloc_L_1 [style="invis", weight=0];

}
